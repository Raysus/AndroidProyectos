<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#b1bebb">

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/buttonFacebook"

        android:text="FACEBOOK"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:background="#0b13f5" />

    <Button
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:id="@+id/buttontwitter"

        android:text="twitter"
        android:layout_alignTop="@+id/buttonwhatsapp"
        android:layout_toRightOf="@+id/buttonFacebook"
        android:layout_marginLeft="23dp"
        android:layout_marginStart="23dp" />

    <Button
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:id="@+id/buttonwhatsapp"

        android:text="whatsapp"
        android:background="#0ffa06"
        android:layout_alignTop="@+id/buttonFacebook"
        android:layout_toLeftOf="@+id/buttonFacebook"
        android:layout_toStartOf="@+id/buttonFacebook"
        android:layout_marginRight="30dp"
        android:layout_marginEnd="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="COMPARTIR  EN REDES SOCIALES"
        android:id="@+id/textView"
        android:layout_marginTop="63dp"
        android:layout_alignParentTop="true"
        android:textSize="25sp"
        android:textStyle="bold|italic"
        android:textIsSelectable="false"
        android:textColor="#f70808" />

</RelativeLayout>
